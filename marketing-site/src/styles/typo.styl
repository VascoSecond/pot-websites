@require 'variables.styl'

// Typography
@import url('https://fonts.googleapis.com/css?family=Fira+Sans:300,400,500,600,700');
// $base-font-size = 62.5%;
// *=10px in most browsers, if user haven't changed font-settings

$base-font-size = 100%;

html 
  font-size: $base-font-size; 
body 
  font-family: 'Fira Sans', sans-serif 
  
#___gatsby 
  * 
    font-family 'Fira Sans', sans-serif
    font-weight 400
    line-height 22.6px
  h1
    margin-top 0.5em
    margin-bottom 10px
    font-size 42px 
    font-weight 400
    line-height 44px
  p 
    font-size 20px 
    font-weight 400
    line-height 22.6px
  footer
    a:link
      text-decoration underline
    @media( max-width $mobi-navi-breakpoint )
      h5, p, a:link
        font-size 20px
        line-height 20px
        margin-bottom 0


